machine:
  kubelet:
    extraMounts:
      - destination: /var/lib/longhorn
        type: bind
        source: /var/lib/longhorn
        options:
          - bind
          - rshared
          - rw
  install:
    image: ${installer_url}
    diskSelector:
      size: '> 40GB'
    wipe: true
  network:
    hostname: ${hostname}
  nodeLabels:
    cilium-enable-bgp: true
    topology.kubernetes.io/region: ${cluster_name}